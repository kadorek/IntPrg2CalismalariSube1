@model IEnumerable<User>
@{
    var count = 1;
}
<table>
    <thead>
        <tr>
            <th>Sıra</th>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td>
                    @* <a asp-action="Detail" asp-route-id="@item.Id">Detaylar</a> *@
                    <a href="@Url.Action("Detail","User",new{id=item.Id})">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>