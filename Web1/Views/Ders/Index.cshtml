@model IEnumerable<Course>

@{
    var count = 1;
}
<table>
    <thead>
        <tr>
            <th>Sıra</th>
            <th>ID</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(count++)</td>      <td>@item.Id</td> q      <td>@item.Name</td>
                <td>
                    @* <a asp-action="Detail" asp-route-id="@item.Id">Detaylar</a> *@
                    <a href="@Url.Action("Details","Ders",new{id=item.Id})">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


