@model IEnumerable<Person>

<style>
    a {
        margin: 10px;
    }
</style>

@{
    var count = 1;
}
<div class="row">
    <div class="col-10">
    </div>
    <div class="col-2">
        <a href="@Url.Action("Create","person")" class=" btn btn-primary">      Yeni Kişi        </a>
    </div>
</div>
<div class="card ">
    <div class="card-header">
        People
    </div>
    <div class="card-body">
        @if (Model is not null && Model.Count() > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Sıra</th>
                        <th>Id</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(count++)</td>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Lastname</td>
                            <td>
                                <a href="@Url.Action("Edit","Person",new{id=item.Id})">Düzenle</a>
                                <a>Detay</a>
                                <a asp-action="Delete" asp-controller="Person" asp-route-id="@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">Herhangi bir kişi bilgisi bulunamadı !</p>
        }
    </div>
</div>

